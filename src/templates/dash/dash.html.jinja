{% extends "nav_layout.html.jinja" %}

{% block title %}
Dashboard
{% endblock %}

{% block body %}
<div
    class="maxtext dashheading"
    style="background: {{ 'linear-gradient(to bottom right, rgba(44, 44, 44, 0.8), rgba(255, 255, 255, 0))' if request.cookies.get('darkmode') == 'on' else 'linear-gradient(to bottom right, rgba(223, 223, 223, 0.8), rgba(255, 255, 255, 0))' }}"
>
    <p>Welcome aboard, {{ user.name.upper().partition(" ")[0] }}.</p>
</div>
<br />
<div class="container" id="dashboardboxes">
    {% for i in range(3) %}
        <div class="row">
            {% for j in range(3) %}
                <div class="col-sm-4">
                    <div class="square skellybones" style="background-color: {{ '#333' if request.cookies.get('darkmode') == 'on' else '#e9e9e9' }}"></div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
{% endblock %}

{% block scripts %}
<script src="{{ url_for('static', filename='dashboard.js') }}" defer></script>
{% endblock %}